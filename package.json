{
  "name": "shitterClient",
  "version": "1.0.0",
  "main": "src/main.js",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icon/icon.icns --prune=true --out=release-builds --asar=true",
    "package-win": "electron-packager . shitterClient --overwrite --asar=true --platform=win32 --arch=x64 --icon=assets/icon/icon.ico --prune=true --out=release-builds --version-string.CompanyName=\"shitterClient Devs\" --version-string.FileDescription=1.0.0 --version-string.ProductName=\"shitterClient Client\"",
    "package-win-ia32": "electron-packager . shitterClient --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icon/icon.ico --prune=true --out=release-builds --version-string.CompanyName=\"shitterClient Devs\" --version-string.FileDescription=1.0.0 --version-string.ProductName=\"shitterClient Client\"",
    "package-linux": "electron-packager . shitterClient --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icon/icon.png --prune=true --out=release-builds",
    "package-linux-ia32": "electron-packager . shitterClient --overwrite --asar=true --platform=linux --arch=ia32 --icon=assets/icon/icon.png --prune=true --out=release-builds"
  },
  "devDependencies": {
    "electron": "10",
    "electron-packager": "^15.2.0"
  }
}
